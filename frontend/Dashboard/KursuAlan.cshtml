@model List<StudentViewModel>

<div class="container mt-5">
    <h2 class="mb-4">Kursa Kayıtlı Öğrenciler</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Bu kursa henüz öğrenci kayıt olmamış.
        </div>
    }
    else
    {
        
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                    <th>Öğrenci No</th>
                    <th>İlerleme</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model)
                {
                   <tr>
                
                        <td></td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.UserEmail</td>
                        <td>@item.Userno</td>
                        <td><a href="@Url.Action("DersIlerleme","Dashboard",new {CourseID = item.CourseId , AccountID = item.AccountId})">@ViewBag.finishedCount / @ViewBag.AllLecture </a></td>
                
                    </tr>
                }
                
            </tbody>
        </table>
    }
</div>