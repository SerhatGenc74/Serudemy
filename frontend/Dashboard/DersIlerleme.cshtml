@model StudentProgressViewModel
@{
    var AllCourseFinishPercentage = (@ViewBag.FinishedCourseCount / @ViewBag.AllLecture) * 100;
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 30px;
        background-color: #f8f9fa;
    }

    .student-progress {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        margin-bottom: 30px;
    }

    .student-header {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 10px;
        color: #333;
    }

    

   

    .lecture-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
        gap: 10px;
    }

    .lecture-left {
        display: flex;
        align-items: center;
        gap: 10px;
        max-width: 60%;
        flex: 1;
    }

    .lecture-title {
        font-size: 15px;
        color: #555;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .lecture-right {
        display: flex;
        align-items: center;
        min-width: 40%;
        justify-content: flex-end;
    }

    .progress-container {
        background-color: #e0e0e0;
        border-radius: 20px;
        overflow: hidden;
        height: 20px;
        width: 100%;
        position: relative;
        margin-left: 10px;
    }

    .progress-bar {
        height: 100%;
        background-color: #4caf50;
        text-align: center;
        color: white;
        font-size: 13px;
        line-height: 20px;
        white-space: nowrap;
    }

    .progress-text {
        position: absolute;
        right: 8px;
        font-size: 12px;
        color: black;
    }

</style>
<!-- Font Awesome (check icon için) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />


<div class="student-progress">
    <div class="student-header">@Model.Account.Name <span style="font-weight: normal; color: #666;">[@ViewBag.FinishedCourseCount/ @ViewBag.AllLecture ders izlenmiş]</span></div>

    <!-- Progress Bar -->
    <div class="progress-container">
        <div class="progress-bar" style="width: @ViewBag.ProgressPerc%;">%@ViewBag.ProgressPerc</div>
    </div>

    <!-- Lecture List -->
    <ul class="lecture-list">
        @foreach (var item in Model.lecture)
        {
            var progress = Model.Progresses.FirstOrDefault(u => u.LecturesId == item.Id);
            if (progress != null)
            {
                <li class="lecture-item">
                    <div class="lecture-left">
                        @if (progress.WatchedSeconds == 0)
                        {
                            <span style="color:red;">❌</span>
                        }
                        else if (progress.WatchedSeconds > 0 && progress.LecturesCompleted == false)
                        {
                            <span style="color:orange;">&#8212;&#8212;</span> <!-- düz çizgi -->
                        }
                        else
                        {
                            <span style="color:green;">✅</span>
                        }

                        <span class="lecture-title">@item.Name</span>
                    </div>

                    <div class="lecture-right">
                        <div class="progress-container">
                                    <div class="progress-bar" style="width: @progress.ProgressPerc%;">%@progress.ProgressPerc</div>
                        </div>
                    </div>
                </li>
            }
            else
            {
                <li class="lecture-item">
                    <div class="alert alert-danger mt-3 w-100" role="alert">
                        Ders İlerlemesi Kayıt Altına Alınmadı
                    </div>
                </li>
            }

        }

</div>



